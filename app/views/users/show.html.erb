<% provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>

<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user, size: 100 %> 
				<%= @user.name %>			
			</h1>
		</section>
		<section>
	      <%= render 'shared/follow/stats' %>
	    </section>
	</aside>
	<div class="span8">
		<%= render 'shared/follow/follow_form' if signed_in? %>
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate(@microposts) %>
		<% end %> 
	</div>
</div>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
